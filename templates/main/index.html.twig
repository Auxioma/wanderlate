	 <script>
		document.addEventListener("DOMContentLoaded", function () {
		    const currentLocaleCode = document.documentElement.lang || 'en';
		    const normalized = currentLocaleCode.toLowerCase().substring(0, 2);
		
		    const localeMap = {
		        fr: flatpickr.l10ns.fr,
		        en: flatpickr.l10ns.en || flatpickr.l10ns.default,
		    };
		
		    flatpickr("#daterange", {
		        mode: "range",
		        dateFormat: normalized === 'fr' ? "d/m/Y" : "m/d/Y",
		        locale: localeMap[normalized] || flatpickr.l10ns.default,
		        minDate: "today",
		        showMonths: 2 // 👉 2 mois visibles
		    });
		});
		
	    											// Valeurs initiales
												let travelersState = {
												  adults: 2,
												  children: 0,
												  rooms: 1
												};
												
												const input = document.getElementById('travelersInput');
												const dropdown = document.getElementById('travelersDropdown');
												
												function updateInputValue() {
												  const totalPeople = travelersState.adults + travelersState.children;
												  const peopleLabel = totalPeople > 1 ? 'personnes' : 'personne';
												  const roomLabel = travelersState.rooms > 1 ? 'chambres' : 'chambre';
												  input.value = `${totalPeople} ${peopleLabel}, ${travelersState.rooms} ${roomLabel}`;
												}
												
												function updateCounters() {
												  document.getElementById('count-adults').textContent = travelersState.adults;
												  document.getElementById('count-children').textContent = travelersState.children;
												  document.getElementById('count-rooms').textContent = travelersState.rooms;
												  updateInputValue();
												}
												
												// Afficher / cacher le dropdown au clic sur l'input
												input.addEventListener('click', function (e) {
												  e.stopPropagation();
												  dropdown.classList.toggle('d-none');
												});
												
												// Fermer si on clique en dehors
												document.addEventListener('click', function (e) {
												  if (!dropdown.classList.contains('d-none')) {
												    if (!dropdown.contains(e.target) && e.target !== input) {
												      dropdown.classList.add('d-none');
												    }
												  }
												});
												
												// Gestion des boutons +/-
												document.querySelectorAll('.btn-counter').forEach(btn => {
												  btn.addEventListener('click', function () {
												    const target = this.getAttribute('data-target');
												    const action = this.getAttribute('data-action');
												
												    if (action === 'plus') {
												      travelersState[target]++;
												    } else {
												      // Limites minimales
												      if (target === 'adults' && travelersState[target] > 1) {
												        travelersState[target]--;
												      } else if (target === 'children' && travelersState[target] > 0) {
												        travelersState[target]--;
												      } else if (target === 'rooms' && travelersState[target] > 1) {
												        travelersState[target]--;
												      }
												    }
												
												    updateCounters();
												  });
												});
												
												// Mise à jour initiale
												updateCounters();
		</script>
